<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <stroke android:width="2dp" android:color="#9E9E9E"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <stroke android:width="2dp" android:color="#BDBDBD"/> <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>