<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFBE7"
    android:padding="16dp"
    tools:context=".screen.ComicScreen">

    <!-- Nút trở lại -->
    <ImageView
        android:id="@+id/comicScreen_btnTroLai"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:layout_marginBottom="10dp"
        android:src="@drawable/back_2_svgrepo_com"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Nút trở lại" />

    <!-- Các nút chức năng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btnDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📥 Tải truyện"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />

        <Button
            android:id="@+id/btnComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="💬 Bình luận"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9800"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />
    </LinearLayout>

    <!-- Nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/comicScreen_tvTenTruyen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📖 Tên truyện dài và nhiều dòng"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#1A237E"
                android:layout_marginBottom="10dp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/comicScreen_tvTacGia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✍ Tác giả: Nguyễn Văn A"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#5D4037"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/comicScreen_tvNoiDung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📝 Đây là nội dung tóm tắt hoặc giới thiệu về bộ truyện tranh. Nội dung này có thể khá dài, nên cần căn dòng và giãn cách hợp lý để dễ đọc và trải nghiệm mượt mà hơn cho người dùng. Đây là ví dụ minh họa."
                android:textSize="15sp"
                android:textColor="#212121"
                android:lineSpacingExtra="6dp"
                android:background="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp" />
            <Button
                android:id="@+id/btnSpeak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔊 Đọc truyện"
                android:textColor="#FFFFFF"
                android:backgroundTint="#3F51B5"
                android:layout_marginStart="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
