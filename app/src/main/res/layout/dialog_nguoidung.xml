<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/nguoiDungDialog_tvTenDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Người Dùng"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#333"/>

    <!-- Tên người dùng -->
    <EditText
        android:id="@+id/nguoiDungDialog_edTenNguoiDung"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Tên Người Dùng"
        android:background="@drawable/design_editext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="14sp"
        android:layout_marginTop="20dp"/>

    <!-- Mật khẩu -->
    <EditText
        android:id="@+id/truyenDialog_edMatKhau"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Mật Khẩu"
        android:inputType="textPassword"
        android:background="@drawable/design_editext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="14sp"
        android:layout_marginTop="12dp"/>

    <!-- Nút bấm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/nguoiDungDialog_btnDongY"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Thêm"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/design_button"/>

        <Button
            android:id="@+id/nguoiDungDialog_btnTuChoi"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Hủy"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/design_button_cancel"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

</LinearLayout>
